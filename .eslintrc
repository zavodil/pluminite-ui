{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "globals": {
    "window": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "eslint-plugin-import",
    "eslint-plugin-jsx",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "jest"
  ],
  "ignorePatterns": ["dist/"],
  "rules": {
    "import/no-named-as-default": 0,
    "import/prefer-default-export": "off",
    "import/no-unresolved": 0,
    "import/extensions": [
      "error",
      "never",
      {
        "js": "never",
        "jsx": "never",
        "png": "always",
        "svg": "always"
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "offsetTernaryExpressions": true
      }
    ],
    "prettier/prettier": "error",
    "camelcase": "off",
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
